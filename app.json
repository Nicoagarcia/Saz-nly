{
  "expo": {
    "name": "Saz-nly-mobile",
    "slug": "chefia-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Sazonly.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/Sazonly.png",
          "color": "#f97316",
          "sounds": [
            "./assets/sounds/timer_complete.mp3"
          ]
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      },
      "bundleIdentifier": "com.nicoagarcia.chefiamobile"
    },
    "android": {
      "package": "com.nicoagarcia.chefiamobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/Sazonly.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "VIBRATE",
        "POST_NOTIFICATIONS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ac1361ac-6e01-40dc-addc-881b03a2d2ef"
      }
    }
  }
}
